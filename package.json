{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel ./src --out-dir ./build -s  --copy-files",
    "build": "npm run clean && npm run build-server",
    "heroku-postbuild": "npm run build && npm run db:migrate",
    "start": "node ./build/index.js",
    "test": "mocha  --require @babel/register ./tests/* --exit",
    "dev:start": "cross-env DEBUG=dev nodemon --exec babel-node ./src/index.js",
    "db:ready": "npm-run-all db:undo db:migrate db:seed",
    "db:migrate": "sequelize db:migrate",
    "db:undo": "sequelize db:migrate:undo:all",
    "db:seed": "sequelize db:seed:all"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "debug": "^4.1.1",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "method-override": "^2.3.10",
    "methods": "^1.1.2",
    "morgan": "^1.9.1",
    "npm-run-all": "^4.1.5",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.10.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^5.2.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "sequelize-cli": "^5.5.0"
  }
}
